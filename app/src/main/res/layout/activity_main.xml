<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"
    android:background="@color/background"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btn_date"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_baseline_date_range_24"
                android:backgroundTint="#FFFFFF" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"
                android:layout_toEndOf="@id/btn_date"
                android:text="Date" />

            <Button
                android:id="@+id/btn_tracker"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_baseline_ballot_24"
                android:backgroundTint="#FFFFFF" />

        </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:orientation="vertical"
            android:weightSum="3"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/crc_category_04">

                <TextView
                    android:id="@+id/tv_litros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="50dp"
                    android:padding="15dp"
                    android:text="2L"
                    android:textSize="40dp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="-30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_mexican_beer_beer_svgrepo_com" />

                <ImageView
                    android:id="@+id/img_social"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_woman_profile_svgrepo_com" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/crc_category_03">

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="0dp"
                    android:text="Festive Days: 2/10"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="Year L: 80/180L"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/a7"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="Week L: 1/4L"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/a2"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="Month L: 6/18L"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a2"
                    android:layout_alignParentStart="true"
                    android:padding="0dp"
                    android:text="Week days: 1/2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a3"
                    android:layout_alignParentStart="true"
                    android:padding="0dp"
                    android:text="Month days: 1/2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a4"
                    android:layout_alignParentStart="true"
                    android:padding="0dp"
                    android:text="Year days: 35/80"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a8"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="Dry month: NO"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/crc_category_02">

                <TextView
                    android:id="@+id/a11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="0dp"
                    android:text="Week days: 1/2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a11"
                    android:layout_alignParentStart="true"
                    android:padding="0dp"
                    android:text="Month days: 1/2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/a13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a12"
                    android:layout_alignParentStart="true"
                    android:padding="0dp"
                    android:text="Year days: 35/80"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="Family days: 100"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/c2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/c1"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="Friends days: 100"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/c3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/c2"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="Mate days: 100"
                    android:textSize="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/crc_category_01">

                <TextView
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="1dp"
                    android:padding="0dp"
                    android:text="TNNT -> MTTF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="TNNT -> MTTF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/b8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/b7"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="TNTN -> MTAT"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/b7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/b2"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:text="TTNN -> AMTT"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/b2"
                    android:layout_alignParentStart="true"
                    android:padding="0dp"
                    android:text="TTNN -> MATT"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/b3"
                    android:layout_alignParentStart="true"
                    android:padding="0dp"
                    android:text="TNTN -> ATMT"
                    android:textSize="20dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</RelativeLayout>